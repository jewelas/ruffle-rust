{
    "extends": ["eslint:recommended", "plugin:prettier/recommended"],
    "root": true,
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 8,
        "sourceType": "module"
    },
    "env": {
        "es2017": true
    },
    "rules": {
        "no-console": "off",
        "no-constant-condition": ["error", {"checkLoops": false}]
    }
}
